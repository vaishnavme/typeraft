{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-fullscreen",
    "core:window:allow-close",
    "fs:default",
    "dialog:default",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:write-all",
    "fs:read-all",
    "fs:allow-write-text-file",
    { "identifier": "fs:allow-mkdir", "allow": ["**"] },
    { "identifier": "fs:write-all", "allow": ["**"] },
    { "identifier": "fs:allow-exists", "allow": ["**"] },
    { "identifier": "fs:read-all", "allow": ["**"] },
    { "identifier": "fs:allow-write-text-file", "allow": ["**"] }
  ]
}
